<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#344454"

    tools:context=".TeamLeavesFragment">


    <android.support.v7.widget.CardView
        app:cardCornerRadius="8dp"
        android:id="@+id/Id_CardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/Id_Cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Leave Calendar"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#676A6C"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#c0c0c0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <Button
                android:id="@+id/Id_Bt_EarnedLeave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#18A689"
                android:text="Earned Leave"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <Button
                android:id="@+id/Id_Bt_SickLeave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#EC4758"
                android:text="Sick Leave"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="@+id/Id_Bt_EarnedLeave"
                app:layout_constraintStart_toStartOf="@+id/Id_Bt_EarnedLeave"
                app:layout_constraintTop_toBottomOf="@+id/Id_Bt_EarnedLeave" />

            <Button
                android:id="@+id/Id_Bt_PaternityLeave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F7A54A"
                android:text="Paternity/Maternity"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="@+id/Id_Bt_SickLeave"
                app:layout_constraintStart_toStartOf="@+id/Id_Bt_SickLeave"
                app:layout_constraintTop_toBottomOf="@+id/Id_Bt_SickLeave" />

            <Button
                android:id="@+id/Id_Bt_HalfDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#1A7BB9"
                android:text="Halfday"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="@+id/Id_Bt_PaternityLeave"
                app:layout_constraintStart_toStartOf="@+id/Id_Bt_PaternityLeave"
                app:layout_constraintTop_toBottomOf="@+id/Id_Bt_PaternityLeave" />

            <CalendarView
                android:id="@+id/Id_CalenderView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/Id_Bt_HalfDay"
                app:layout_constraintStart_toStartOf="@+id/Id_Bt_HalfDay"
                app:layout_constraintTop_toBottomOf="@+id/Id_Bt_HalfDay" />


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>


</FrameLayout>