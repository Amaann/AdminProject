<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/Id_Tv_TicketId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="439328"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/Id_Tv_Time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Id_Tv_Title" />

    <TextView
        android:id="@+id/Id_Tv_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="refund the Zoppies via online"
        app:layout_constraintStart_toEndOf="@+id/Id_Tv_TicketId"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Id_Tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="8th Jul 2018, "
        app:layout_constraintBottom_toBottomOf="@+id/Id_Tv_TicketId"
        app:layout_constraintStart_toStartOf="@+id/Id_Tv_Title"
        app:layout_constraintTop_toBottomOf="@+id/Id_Tv_Title" />

    <Button
        android:id="@+id/Id_Bt_View"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="View"
        android:background="@color/buttonColor"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/Id_Tv_Time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Id_Tv_Time" />

    <TextView
        android:id="@+id/Id_Tv_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14:13"
        app:layout_constraintBaseline_toBaselineOf="@+id/Id_Tv_date"
        app:layout_constraintStart_toEndOf="@+id/Id_Tv_date" />

    <View
        android:id="@+id/View"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/buttonColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Id_Bt_View"
        app:layout_constraintStart_toStartOf="@+id/Id_Tv_TicketId"
        app:layout_constraintTop_toBottomOf="@+id/Id_Bt_View" />
</android.support.constraint.ConstraintLayout>